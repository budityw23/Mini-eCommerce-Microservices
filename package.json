{
  "name": "mini-ecommerce",
  "version": "0.1.0",
  "private": true,
  "description": "Mini eCommerce microservices monorepo",
  "workspaces": [
    "services/*",
    "gateway",
    "shared"
  ],
  "scripts": {
    "lint": "eslint \"{services,gateway,shared}/**/*.{js,cjs,mjs}\" --max-warnings=0",
    "lint:fix": "eslint \"{services,gateway,shared}/**/*.{js,cjs,mjs}\" --fix",
    "format": "prettier --check \"**/*.{js,json,md}\"",
    "format:write": "prettier --write \"**/*.{js,json,md}\"",
    "test": "jest --runInBand",
    "compose:up": "docker compose up",
    "compose:down": "docker compose down"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "jest": "^30.1.3",
    "prettier": "^3.6.2"
  }
}
